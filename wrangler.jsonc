  /**
   * Environment Variables
   * https://developers.cloudflare.com/workers/wrangler/configuration/#environment-variables
   */
  "vars": {
    "REELLOLY_BUCKET_NAME": "reeloly",
    "ENVIRONMENT": "dev",
    "AGENT_REPO_URL": "https://github.com/reeloly/reeloly-agent.git",
    "ALLOWED_ORIGINS": ["http://localhost:3000", "https://reeloly.com"]
  },
  "containers": [
    {
      "class_name": "Sandbox",
      "image": "./Dockerfile",
      "instance_type": "basic"
    }
  ],
  "durable_objects": {
    "bindings": [
      {
        "class_name": "Sandbox",
        "name": "Sandbox"
      }
    ]
  },
  "migrations": [
    {
      "new_sqlite_classes": ["Sandbox"],
      "tag": "v1"
    }
  ],
  "r2_buckets": [
    {
      "binding": "REELLOLY_BUCKET",
      "bucket_name": "reeloly"
    }
  ]
}
